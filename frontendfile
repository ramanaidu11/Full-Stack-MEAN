# frontendfile - Angular-friendly multi-stage Dockerfile

# ---------- build stage ----------
FROM node:18-alpine AS build
WORKDIR /app

# Install dependencies (dev deps are needed for the Angular CLI build)
COPY package.json package-lock.json* ./
RUN npm ci

# Copy source and build
COPY . .

# Try to build and output to /app/build (Angular uses dist/<name> by default)
# The `--` passes flags to the npm script if package.json's build runs ng build
RUN npm run build -- --output-path=build --configuration=production || npm run build

# Normalize build output so runtime can always copy /app/build
# If Angular created dist/<app-name>, copy its contents into /app/build
RUN mkdir -p /app/build \
 && if [ -d /app/dist ]; then \
      for d in /app/dist/*; do \
        cp -r "$d"/* /app/build/ 2>/dev/null || true; \
      done; \
    fi

# ---------- production stage (nginx) ----------
FROM nginx:stable-alpine AS runtime
# remove default nginx html
RUN rm -rf /usr/share/nginx/html/*

# Copy normalized build output from the build stage
COPY --from=build /app/build /usr/share/nginx/html

# Optional: copy a custom nginx.conf if you need SPA routing (uncomment if provided)
# COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]

