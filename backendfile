FROM ubuntu:22.04
ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update && apt-get install -y && apt-get install -y nodejs  && apt-get clean \
        curl \
        ca-certificates \
    && curl -fsSL https://deb.nodesource.com/setup_18.x | bash - \
    && rm -rf /var/lib/apt/lists/*
WORKDIR /app
COPY package*.json ./
#RUN npm ci --omit=dev
COPY . .

EXPOSE 3000

CMD ["npm", "start"]

~
~

